<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="20160302172120_1" author="GoodBoy">
        <createTable tableName="group_tests">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="test_id" type="bigint"/>
            <column name="student_group_id" type="bigint"/>
            <column name="description" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="20160302172120_2" author="GoodBoy">
        <addForeignKeyConstraint baseTableName="group_tests"
                                 baseColumnNames="test_id"
                                 constraintName="group_tests_tests_fk"
                                 referencedTableName="tests"
                                 referencedColumnNames="id"
        />
    </changeSet>

    <changeSet id="20160302172120_3" author="GoodBoy">
        <addForeignKeyConstraint baseTableName="group_tests"
                                 baseColumnNames="student_group_id"
                                 constraintName="group_tests_student_groups_fk"
                                 referencedTableName="student_groups"
                                 referencedColumnNames="id"
        />
    </changeSet>

    <changeSet id="20160302172120_4" author="GoodBoy">
        <createSequence sequenceName="group_tests_id_seq"
                        startValue="50"
                        incrementBy="1"
                        minValue="50"
        />
    </changeSet>

</databaseChangeLog>