<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1604101346_1" author="Brutaller">
        <createTable tableName="question_variants">
            <column name="question_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="answer_variant_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1604101346_2" author="Brutaller">
        <addForeignKeyConstraint baseColumnNames="question_id"
                                 baseTableName="question_variants"
                                 constraintName="fk_question"
                                 referencedColumnNames="id"
                                 referencedTableName="questions"/>
    </changeSet>

    <changeSet id="1604101346_3" author="Brutaller">
        <addForeignKeyConstraint baseColumnNames="answer_variant_id"
                                 baseTableName="question_variants"
                                 constraintName="fk_answer_variant"
                                 referencedColumnNames="id"
                                 referencedTableName="answer_variants"/>
    </changeSet>

</databaseChangeLog>