<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="2903105120_1" author="GoodBoy">
        <createTable tableName="task">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="driving_school_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="2903105120_2" author="GoodBoy">
        <createTable tableName="question">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="image" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="task_id" type="bigint"/>
            <column name="point" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="2903105120_3" author="GoodBoy">
        <createTable tableName="answer">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="question_id" type="bigint"/>
            <column name="right" type="boolean"/>
        </createTable>
    </changeSet>

    <changeSet id="2903105120_4" author="GoodBoy">
        <createTable tableName="student_task">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="student_id" type="bigint"/>
            <column name="task_id" type="bigint"/>
            <column name="deadline" type="date"/>
            <column name="is_done" type="boolean"/>
            <column name="point" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="2903105120_5" author="GoodBoy">
        <addForeignKeyConstraint baseColumnNames="driving_school_id"
                                 baseTableName="task"
                                 constraintName="task_driving_school_fk"
                                 referencedColumnNames="id"
                                 referencedTableName="driving_school"/>
    </changeSet>

    <changeSet id="2903105120_6" author="GoodBoy">
        <addForeignKeyConstraint baseColumnNames="task_id"
                                 baseTableName="question"
                                 constraintName="question_task_fk"
                                 referencedColumnNames="id"
                                 referencedTableName="task"/>
    </changeSet>

    <changeSet id="2903105120_7" author="GoodBoy">
        <addForeignKeyConstraint baseColumnNames="question_id"
                                 baseTableName="answer"
                                 constraintName="answer_question_fk"
                                 referencedColumnNames="id"
                                 referencedTableName="question"/>
    </changeSet>

    <changeSet id="2903105120_8" author="GoodBoy">
        <addForeignKeyConstraint baseColumnNames="student_id"
                                 baseTableName="student_task"
                                 constraintName="student_task_student_fk"
                                 referencedColumnNames="id"
                                 referencedTableName="student"/>
    </changeSet>

    <changeSet id="2903105120_9" author="GoodBoy">
        <addForeignKeyConstraint baseColumnNames="task_id"
                                 baseTableName="student_task"
                                 constraintName="student_task_task_fk"
                                 referencedColumnNames="id"
                                 referencedTableName="task"/>
    </changeSet>

    <changeSet id="2903105120_10" author="GoodBoy">
        <createSequence
                sequenceName="task_id_seq"
                startValue="50"
                incrementBy="1"
                minValue="50"/>
    </changeSet>

    <changeSet id="2903105120_11" author="GoodBoy">
        <createSequence
                sequenceName="question_id_seq"
                startValue="50"
                incrementBy="1"
                minValue="50"/>
    </changeSet>

    <changeSet id="2903105120_12" author="GoodBoy">
        <createSequence
                sequenceName="answer_id_seq"
                startValue="50"
                incrementBy="1"
                minValue="50"/>
    </changeSet>

    <changeSet id="2903105120_13" author="GoodBoy">
        <createSequence
                sequenceName="student_task_id_seq"
                startValue="50"
                incrementBy="1"
                minValue="50"/>
    </changeSet>


</databaseChangeLog>